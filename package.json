{
	"name": "vscode-simple-auto-reload",
	"displayName": "Simple Auto Reload",
	"description": "Auto reload a browser tab after save",
	"version": "0.12.0",
	"publisher": "fserb",
	"repository": "https://github.com/fserb/vscode-simple-auto-reload",
	"engines": {
		"vscode": "^1.32.0"
	},
	"activationEvents": [
		"onCommand:vscode-simple-auto-reload.selectTab"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"title": "Auto reload command configuration.",
			"type": "object",
			"properties": {
				"simpleautoreload.host": {
                    "type": "string",
                    "description": "DevTools remote host",
                    "default": "localhost"
                },
                "simpleautoreload.port": {
                    "type": "integer",
                    "description": "DevTools remote port",
                    "default": 9222
                },
                "simpleautoreload.secure": {
                    "type": "boolean",
                    "description": "DevTools remote use HTTPS",
                    "default": false
                },
                "simpleautoreload.delay": {
                    "type": "integer",
                    "description": "Delay before reload, in milliseconds",
                    "default": 100
                }
			}
		},
		"commands": [
			{
				"command": "vscode-simple-auto-reload.selectTab",
				"category": "Auto Reload",
				"title": "Select tab"
			},
			{
				"command": "vscode-simple-auto-reload.stop",
				"category": "Auto Reload",
				"title": "Stop"
			}
		]
	},
	"scripts": {},
	"devDependencies": {
		"@types/vscode": "^1.32.0",
		"vsce": "^1.77.0"
	},
	"dependencies": {
		"chrome-remote-interface": "^0.28.2"
	},
	"extensionKind": ["ui"]
}
